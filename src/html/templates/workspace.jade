.silex-workspace
  // file explorer
  iframe#silex-file-explorer.notranslate(
    frameborder='no',
    scrolling='no',
    allowfullscreen='yes',
    data-ce-unifile-url='api/1.0/',
    data-ce-path='/libs/cloud-explorer/')

  // menu
  .silex-menu
    .crowdfundgin-button.menubar.goog-menubar.goog-menubar-horizontal
      .goog-inline-block.goog-menu-button-outer-box
        a.goog-menu-button.auto-promo-left(target="_blank", href="https://github.com/silexlabs/Silex/wiki/Contribute") Contribute
        a.goog-menu-button.auto-promo-right(target="_blank", href="http://crowdfunding.silex.me/") Crowd Fund me!
    // the menu will be placed here by menu.js

  // page tool
  .silex-page-tool.notranslate
    include ./page-tool.jade

  .silex-context-menu
    .button.save.fa-inverse.fa-cloud.off(title='Save')
    .button.undo.fa-inverse.fa-undo.off(title='Undo')
    .button.redo.fa-inverse.fa-repeat.off(title='Redo')
    .button.sep
    .button.text(title='Text')
    .button.image(title='Image')
    .button.container(title='Container')
    .button.html.fa-inverse.fa-code(title='Html')
    .button.sep
    .button.delete.fa-inverse.fa-trash.off(title='Delete')
    .button.copy.off(title='Copy')
    .button.paste.off(title='Paste')
    .button.sep
    .button.top.fa-inverse.fa-angle-double-up.off(title='To top')
    .button.up.fa-inverse.fa-angle-up.off(title='Up')
    .button.down.fa-inverse.fa-angle-down.off(title='Down')
    .button.bottom.fa-inverse.fa-angle-double-down.off(title='To bottom')
    .button.sep
    .button.preview.fa-inverse.fa-eye.off(title='Preview')
    .button.previewResponsize.off(title='Preview in Responsize')
    .button.codepen(title='edit in codepen.io')
    .button.sep
    a.button.right.help.fa-inverse.fa-question-circle(href='https://github.com/silexlabs/Silex/wiki', title="get help here!", target='_blank')
    .button.right.mobile.fa-inverse.fa-mobile(title="Mobile editor")
    .button.right.desktop.fa-inverse.fa-desktop(title="Desktop editor")

  .tip-of-the-day
    img(src='assets/tooltip-callout.gif')

  // vertical splitter
  .vertical-splitter
    .knob

  // properties tool
  .silex-property-tool.notranslate
    include ./property-tool.jade

  // stage
  .silex-stage
    // notranslate is to prevent chrome automatic translation
    iframe#silex-stage-iframe.silex-stage-iframe.notranslate

  // bread crumbs
  .silex-bread-crumbs

  // dialogs background
  .dialogs-background

  // settings
  .silex-settings-dialog.hidden-dialog
    include ./settings-dialog.jade

  // html editor
  .silex-html-editor.ace-editor-container.notranslate.hidden-dialog
    .title-bar HTML editor
      a.help-icon(href='https://github.com/silexlabs/Silex/issues/199', title='about Silex and HTML', target='_blank') Help
    .ace-editor
    .dock-btn.buttons
    .close-btn.html-editor-close-btn.buttons

  // css editor
  .silex-css-editor.ace-editor-container.notranslate.hidden-dialog
    .title-bar CSS editor
      a.help-icon(href='https://github.com/silexlabs/Silex/issues/184', title='about Silex and CSS', target='_blank') Help
    .ace-editor
    .dock-btn.buttons
    .close-btn.css-editor-close-btn.buttons

  // js editor
  .silex-js-editor.ace-editor-container.notranslate.hidden-dialog
    .title-bar JS editor
      a.help-icon(href='https://github.com/silexlabs/Silex/issues/200', title='about Silex and Javascript', target='_blank') Help
    .ace-editor
    .dock-btn.buttons
    .close-btn.js-editor-close-btn.buttons

  // text editor
  .silex-text-editor.notranslate.hidden-dialog
    .toolbar
    #text-editor.text-field
    .close-btn.text-editor-close-btn.buttons
