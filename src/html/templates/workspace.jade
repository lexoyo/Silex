.silex-workspace
  // file explorer
  iframe#silex-file-explorer.notranslate(
    frameborder='no',
    scrolling='no',
    allowfullscreen='yes',
    data-ce-unifile-url='api/1.0/',
    data-ce-path='/libs/cloud-explorer/')

  // settings
  .settings-background.hidden-dialog
  .silex-settings-dialog.hidden-dialog
    include ./settings-dialog.jade

  // menu
  .silex-menu
    link(rel='stylesheet', href='css/closure/menu.css')
    link(rel='stylesheet', href='css/closure/menubar.css')
    link(rel='stylesheet', href='css/closure/menubutton.css')
    link(rel='stylesheet', href='css/closure/menuitem.css')
    link(rel='stylesheet', href='css/closure/menuseparator.css')
    a.website-name Untitled website

  // page tool
  .silex-page-tool.notranslate
    include ./page-tool.jade

  // properties tool
  .silex-property-tool.notranslate
    include ./property-tool.jade

  // stage
  .silex-stage
    // notranslate is to prevent chrome automatic translation
    iframe#silex-stage-iframe.silex-stage-iframe.notranslate

  // dialogs background
  .dialogs-background.hidden-dialog

  // html editor
  .silex-html-editor.ace-editor-container.notranslate.hidden-dialog
    .title-bar Edit the HTML content
      a.help-icon(href='https://github.com/silexlabs/Silex/issues/199', title='about Silex and HTML', target='blank') Help
    .ace-editor
    .close-btn.html-editor-close-btn

  // css editor
  .silex-css-editor.ace-editor-container.notranslate.hidden-dialog
    .title-bar Edit Silex CSS styles
      a.help-icon(href='https://github.com/silexlabs/Silex/issues/184', title='about Silex and CSS', target='blank') Help
    .ace-editor
    .close-btn.css-editor-close-btn

  // js editor
  .silex-js-editor.ace-editor-container.notranslate.hidden-dialog
    .title-bar Edit Silex JS scripts
      a.help-icon(href='https://github.com/silexlabs/Silex/issues/200', title='about Silex and Javascript', target='blank') Help
    .ace-editor
    .close-btn.js-editor-close-btn

  // text editor
  .silex-texteditor.notranslate.hidden-dialog
    link(rel='stylesheet', href='css/closure/button.css')
    link(rel='stylesheet', href='css/closure/dialog.css')
    link(rel='stylesheet', href='css/closure/linkbutton.css')
    link(rel='stylesheet', href='css/closure/menu.css')
    link(rel='stylesheet', href='css/closure/menuitem.css')
    link(rel='stylesheet', href='css/closure/menuseparator.css')
    link(rel='stylesheet', href='css/closure/tab.css')
    link(rel='stylesheet', href='css/closure/tabbar.css')
    link(rel='stylesheet', href='css/closure/toolbar.css')
    link(rel='stylesheet', href='css/closure/colormenubutton.css')
    link(rel='stylesheet', href='css/closure/palette.css')
    link(rel='stylesheet', href='css/closure/colorpalette.css')
    link(rel='stylesheet', href='css/closure/editor/bubble.css')
    link(rel='stylesheet', href='css/closure/editor/dialog.css')
    link(rel='stylesheet', href='css/closure/editor/linkdialog.css')
    link(rel='stylesheet', href='css/closure/editortoolbar.css')
    .toolbar
    div#text-editor.text-field
    .close-btn.text-editor-close-btn
